
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin privileges
    function isAdmin() {
      // List of admin UIDs. Ensure this matches your AuthContext.
      let adminUIDs = ["2A71uIHMVPXVcp4zSCSoxxir8Bl1"];
      return request.auth != null && request.auth.uid in adminUIDs;
    }

    // User data is private to the user and admins
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin(); // Only admins can delete user documents

      // User subcollections (appointments, addresses)
      match /{subcollection}/{docId} {
        allow read, create, update, delete: if request.auth.uid == userId || isAdmin();
      }
    }

    // Products can be read by anyone, but only managed by admins
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Services can be read by anyone, but only managed by admins
    match /services/{serviceId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Offers can be read by anyone, but only managed by admins
    match /offers/{offerId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }
    
    // Enquiries can be created by anyone, but only managed by admins
    match /enquiries/{enquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
