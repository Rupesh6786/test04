rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAdmin() {
      // Admins have their UIDs listed here.
      return request.auth.uid in ["2A71uIHMVPXVcp4zSCSoxxir8Bl1"];
    }

    function isOwner(userId) {
      // Checks if the requesting user is the owner of the document.
      return request.auth.uid == userId;
    }

    function isPurchasing() {
      // This function allows a user to update a product's stock, but only to decrease it by 1.
      // This is necessary for the checkout transaction to succeed for non-admin users.
      let isStockDecrement = request.resource.data.stock == resource.data.stock - 1;
      let onlyStockIsModified = request.resource.data.diff(resource.data).affectedKeys.hasOnly(['stock']);

      // 1. User must be logged in.
      return request.auth != null
        // 2. The operation must be an update.
        && request.method == 'update'
        // 3. The stock must be decremented by exactly 1.
        && isStockDecrement
        // 4. The stock being updated must have been greater than 0.
        && resource.data.stock > 0
        // 5. Ensure that ONLY the 'stock' field is being changed.
        && onlyStockIsModified;
    }
    
    // --- User Data Rules ---
    match /users/{userId} {
      // Admins can read/write any user profile, users can read/write their own.
      allow read, write: if isOwner(userId) || isAdmin();

      // Users can manage their own subcollections.
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // --- Public & Admin-Managed Collections ---
    
    // Anyone can read products. Admins can write freely.
    // Users can write ONLY to decrement stock during a purchase.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || isPurchasing();
    }

    // Anyone can read services. Only admins can write.
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Anyone can read active offers. Only admins can write.
    match /offers/{offerId} {
      allow read: if resource.data.status == 'Active';
      allow write: if isAdmin();
    }

    // Anyone can create an enquiry. Only admins can read/update/delete.
    match /enquiries/{enquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
